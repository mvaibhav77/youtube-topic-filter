{
  "manifest_version": 3,
  "name": "YouTube Topic Filter",
  "version": "1.0",
  "description": "Filter YouTube recommendations based on topics.",
  "permissions": ["storage", "activeTab", "identity"],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html"
  },
  "icons": {
    "16": "icons/icon16.png",
    "32": "icons/icon32.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "content_scripts": [
    {
      "matches": ["*://www.youtube.com/*"],
      "js": ["contentScript.js"]
    }
  ],
  "web_accessible_resources": [
    {
      "resources": [
        "images/lock.png",
        "js/jquery-3.5.1.min.js",
        "js/popper.min.js",
        "js/bootstrap.min.js"
      ],
      "matches": ["<all_urls>"]
    }
  ]
}
